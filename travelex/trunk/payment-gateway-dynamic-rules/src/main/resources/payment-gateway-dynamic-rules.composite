<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" 
           targetNamespace="urn:composite:com.travelex.tgbp" 
           name="DynamicRuleSubmissionProcessor"
           autowire="false">
       
    <service name="dynamicRuleSubmissionProcessor" promote="DynamicRuleSubmissionProcessor" />
    <service name="dynamicRules" promote="DefaultDynamicRules" />
    
	<reference name="dataStore" promote="DynamicRuleSubmissionProcessor/dataStore DefaultDynamicRules/dataStore"/>
	    
    <component name="DynamicRuleSubmissionProcessor">
    	<implementation.java class="com.travelex.tgbp.rules.dynamic.capture.DefaultDynamicRuleSubmissionProcessor" />
    </component>    

    <component name="DefaultDynamicRules">
    	<implementation.java class="com.travelex.tgbp.rules.dynamic.execute.DefaultDynamicRules" />
    </component>            

</composite>
