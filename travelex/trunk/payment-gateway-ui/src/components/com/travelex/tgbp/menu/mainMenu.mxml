				title="Create Routing Rules"
				image="@Embed('/../assets/Compass.png')"
				description="Routing rule configuration"/>
				
			<accordionItem id="manageRules" 
				title="Manage Routing Rules"
				image="@Embed('/../assets/Compass.png')"
				description="Routing rule management"/>
				
		   <accordionItem id="clearingRules" 
				title="Scheme Rules"
