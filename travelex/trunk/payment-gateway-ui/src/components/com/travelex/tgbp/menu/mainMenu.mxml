		  xmlns:flexlib="http://code.google.com/p/flexlib/"
		  xmlns="components.com.travelex.tgbp.menu.*"
		  title="Payment Gateway">
	
		<mx:Script source="as/mainMenu.as"/>
	
		<flexlib:VAccordion id="accordion" 
			headerLocation="below" width="200" 
			resizeToContent="true" headerRenderer="components.com.travelex.tgbp.menu.header"
			click="handleMainMenuClick(event)">
			
			<accordionItem id="systemstatus" 
				title="System Status" 
				image="@Embed('/../assets/system-status.png')"
				description="System health and activity overview" />
			
