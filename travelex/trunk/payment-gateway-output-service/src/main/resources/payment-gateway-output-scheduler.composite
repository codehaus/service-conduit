<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" 
           targetNamespace="urn:composite:com.travelex.tgbp" 
           name="OutputServiceScheduler"
           autowire="false">
       
    <service name="outputSchedulerService" promote="OutputSchedulerService" />
    <service name="outputTriggerService" promote="OutputTriggerService" />

    <reference name="instructionOutputService" promote="OutputTriggerService/instructionOutputService" />
    <reference name="fileOutputService" promote="OutputTriggerService/fileOutputService" />

    <property name="initialStartupDelayInSeconds" />
    <property name="outputFrequencyInSeconds" />
    
    <component name="OutputSchedulerService">
    	<implementation.java class="com.travelex.tgbp.output.timing.DefaultOutputSchedulerService" />
    	<property name="initialStartupDelayInSeconds" source="$initialStartupDelayInSeconds" />
    	<property name="outputFrequencyInSeconds" source="$outputFrequencyInSeconds" />
    </component>
    
    <component name="OutputTriggerService">
        <implementation.java class="com.travelex.tgbp.output.timing.DefaultOutputServiceWrapper" />
    </component>
    
</composite>
