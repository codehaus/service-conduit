<?xml version="1.0" encoding="UTF-8"?>
<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:sca4j="urn:sca4j.org"
           targetNamespace="urn:com.travelex.tgbp"
           name="TgbpFtpServerExtension"
           autowire="true">

    <!-- Ftp Server -->
    <component name="TgbpFtpServer">
        <implementation.composite scdlResource="META-INF/ftpserver.composite"/>
        <property name="config">
            <config xmlns="">
	            <commandPort>2000</commandPort>
	            <minPassivePort>6000</minPassivePort>
	            <maxPassivePort>7000</maxPassivePort>
	            <idleTimeout>60</idleTimeout>
	            <users>
	                <tgbp>password</tgbp>
	            </users>
	        </config>
        </property>
    </component>

    <component name="ClmFtpServer">
        <implementation.composite scdlResource="META-INF/ftpserver.composite"/>
        <property name="config">
            <config xmlns="">
	            <commandPort>3000</commandPort>
	            <minPassivePort>6000</minPassivePort>
	            <maxPassivePort>7000</maxPassivePort>
	            <idleTimeout>60</idleTimeout>
	            <users>
	                <clm>password</clm>
	            </users>
	        </config>
        </property>
    </component>
    
</composite>
