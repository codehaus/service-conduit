<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" 
           targetNamespace="urn:composite:com.travelex.tgbp" 
           name="SchemaModelBuilder"
           autowire="false">
       
    <service name="submissionProcessor" promote="SubmissionProcessor/SubmissionProcessor" />
    <reference name="submissionParser" promote="SubmissionProcessor/submissionParser" />
    <reference name="dataStore" promote="SubmissionProcessor/dataStore SubmissionEventNotifier/dataStore" />
    <reference name="eventNotifier" promote="SubmissionEventNotifier/eventNotifier" />
    
    <component name="SubmissionProcessor">
    	<implementation.java class="com.travelex.tgbp.processor.DefaultSubmissionProcessor" />
    	<reference name="submissionEventNotifier" target="SubmissionEventNotifier"/>
    </component>
    
    <component name="SubmissionEventNotifier">
    	<implementation.java class="com.travelex.tgbp.processor.event.DefaultSubmissionEventNotifier" />
    </component>    

</composite>
