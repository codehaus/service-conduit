<composite xmlns="http://www.osoa.org/xmlns/sca/1.0"
           xmlns:sca4j="urn:sca4j.org" 
           xmlns:sca="http://www.osoa.org/xmlns/sca/1.0" 
           name="webapp" targetNamespace="urn:composite:com.travelex.tgbp" 
           autowire="true">

	<component name="webapp">
		<implementation.web />
	</component>
	
	<component name="PaymentGatewayIntegrationAssembly">
		<implementation.composite scdlResource="pg-integration-assembly.composite" />
		
		<service name="schemaModelBuilder">
            <sca4j:binding.http />
        </service>
        
        <service name="dynamicRuleSubmissionProcessor">
            <sca4j:binding.http />
        </service>
        
        <service name="inputSubmissionFtpListener">
            <sca4j:binding.ftp uri="/inbound-submissions"/>
        </service>
        
        <property name="inputSubmissionBaseDir">c:/tgbp-submissions</property>
	</component>
	
</composite>
