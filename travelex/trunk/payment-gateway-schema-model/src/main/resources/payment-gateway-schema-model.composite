<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" 
           targetNamespace="urn:composite:com.travelex.tgbp" 
           name="SchemaModelBuilder"
           autowire="false">
       
    <service name="schemaModelBuilder" promote="SchemaModelBuilder" />
    
    <component name="SchemaModelBuilder">
    	<implementation.java class="com.travelex.tgbp.schema.model.DefaultSchemaModelBuilder" />
        <reference name="transformer" target="SchemaTransformer/xsltTransformationService" />
    </component>
    
	<component name="SchemaTransformer">
        <implementation.composite scdlResource="payment-gateway-transform-xslt.composite"/>
        <property name="transformerFactory">net.sf.saxon.TransformerFactoryImpl</property>
        <property name="xsl">/xsl/isoSchema.xsl</property>
        <property name="encoding">UTF-8</property>        
    </component>  
    
        
</composite>
