<composite xmlns="http://www.osoa.org/xmlns/sca/1.0" 
           name="xsltTransformationService"
           targetNamespace="urn:composite:com.travelex.tgbp.transform" 
           autowire="false">
       
    <service name="xsltTransformationService" promote="XsltTransformationService/TransformationService" />

    <property name="transformerFactory" />
    <property name="xsl" />
    <property name="encoding" />
    
    <component name="XsltTransformationService">
        <implementation.java class="com.travelex.tgbp.transform.xslt.XsltTransformationService" />
        <property name="transformerFactory" source="$transformerFactory" />
        <property name="xsl" source="$xsl" />
        <property name="encoding" source="$encoding" />
    </component>
        
</composite>
